{
	"publisher": "lgarcin",
	"repository": {
		"type": "git",
		"url": "https://github.com/lgarcin/vscode-pweave.git"
	},
	"name": "vscode-pweave",
	"displayName": "vscode-pweave",
	"description": "Format pweave documents",
	"version": "0.3.6",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:pweave_tex"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "vscode-pweave",
				"properties": {
					"vscode-pweave.latexindentPath": {
						"type": "string",
						"default": "latexindent",
						"description": "latexindent path"
					},
					"vscode-pweave.autopep8Path": {
						"type": "string",
						"default": "autopep8",
						"description": "autopep8 path"
					},
					"vscode-pweave.pweavePath": {
						"type": "string",
						"default": "pweave",
						"description": "pweave path"
					},
					"vscode-pweave.pweaveOutputFormat": {
						"type": "string",
						"default": "tex",
						"description": "Pweave output format : 'tex' or 'texminted' or 'texpygments'"
					}
				}
			}
		],
		"keybindings": [
			{
				"command": "vscode-pweave.build",
				"key": "ctrl+alt+b",
				"when": "editorLangId == pweave_tex"
			},
			{
				"command": "vscode-pweave.show",
				"key": "ctrl+alt+v",
				"when": "editorLangId == pweave_tex"
			}
		],
		"languages": [
			{
				"id": "pweave_tex",
				"aliases": [
					"Pweave Latex"
				],
				"extensions": [
					"pnw",
					"ptexw"
				]
			}
		],
		"commands": [
			{
				"command": "vscode-pweave.build",
				"title": "Build pweave",
				"when": "editorLangId == pweave_tex"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.0.23",
		"@types/vscode": "^1.65.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.6.3",
		"tslint": "^6.1.1",
		"vscode-test": "^1.3.0"
	}
}
